{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@contexts/*": ["src/contexts/*"],
      "@hooks/*": ["src/hooks/*"],
      "@img/*": ["src/img/*"],
      "@shared/*": ["../shared/*"],
      "@store": ["src/store/store.tsx"]
    }
  },
  "include": ["./src/**/*", "./*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
